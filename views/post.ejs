<body>
    <div class="container">
        <% include common/header %>
        <div class="row body">
            <h2 class="col-xs-12 mb50">发表文章</h2>
        </div>
        <div clss="row">
            <div class="col-xs-12">
                <div class="col-xs-3">slider</div>
                <div class="col-xs-9">
                    <form  action="">
                        <div class="form-group">
                            <label for="post_title">标题</label>
                            <input id="post_title" class="form-control" type="text" name="post_title" />
                        </div>
                        <div class="form-group">
                            <label for="post_gramm">概要</label>
                            <input id="post_gramm" class="form-control" type="text" name="post_gramm" />
                        </div>
